<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--            <com.smarteist.autoimageslider.SliderView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="250dp"-->
            <!--                android:id="@+id/slider" />-->
            <ImageView

                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Galgotias Tale"
                android:layout_marginTop="18sp"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/titleColor"
                android:fontFamily="@string/bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galgotias University is a private university located in Greater Noida, Uttar Pradesh, India. It was founded in 2011 by the Galgotias Educational Institutions, which have been providing education in the fields of engineering and management since 1999.The university offers a wide range of undergraduate, postgraduate and doctoral programs in various fields such as engineering, management, law, commerce, science, arts, and humanities. It has state-of-the-art infrastructure, modern facilities, and a vibrant campus life. The university has a strong focus on research and innovation, with several research centers and institutes that promote cutting-edge research.Galgotias University is recognized by the University Grants Commission (UGC) and is accredited by the National Assessment and Accreditation Council (NAAC) with 'A+' grade. It is also a member of the Association of Indian Universities (AIU) and the Association of Commonwealth Universities (ACU)."
                android:justificationMode="inter_word"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/textColor"
                android:fontFamily="@string/light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="@color/teal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="36dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departments"
                        android:layout_marginTop="16dp"
                        android:textSize="22sp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textColor"
                        android:fontFamily="@string/bold"/>
                    
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="School of Computer Science and Engineering"
                                android:layout_marginTop="16dp"
                                android:layout_marginHorizontal="16dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/textColor"
                                android:layout_margin="8dp"
                                android:fontFamily="@string/bold"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="School of Business"
                                android:layout_marginTop="16dp"
                                android:layout_marginHorizontal="16dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/textColor"
                                android:layout_margin="8dp"
                                android:fontFamily="@string/bold"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="School of Law"
                                android:layout_marginTop="16dp"
                                android:layout_marginHorizontal="16dp"
                                android:textSize="15sp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/textColor"
                                android:layout_margin="8dp"
                                android:fontFamily="@string/bold"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:layout_marginTop="18sp"
                    android:textSize="17sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/titleColor"
                    android:fontFamily="@string/bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/university"
                    android:drawablePadding="8dp"
                    android:text="Galgotias University"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@string/light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="8dp"
                    android:text="Plot No.2, Sector 17-A Yamuna Expressway, Greater Noida, Gautam Buddh Nagar, Gautam Buddh Nagar,Gautam Buddha Nagar Uttar Pradesh 203201"
                    android:layout_marginTop="16sp"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@string/light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="8dp"
                    android:text="(+91) 0120 4806820, (+91) 7838829983"
                    android:layout_marginTop="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@string/light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="8dp"
                    android:text="admissions@galgotiasuniversity.edu.in"
                    android:layout_marginTop="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@string/light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/website"
                    android:drawablePadding="8dp"
                    android:text="http://galgotiasuniversity.edu.in"
                    android:layout_marginTop="16dp"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@string/light"/>

                <ImageView
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="230dp"
                    android:src="@drawable/map"/>




            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</FrameLayout>